@model IEnumerable<Store.WEB.Models.OrderDetailsVM>

@{
    ViewBag.Title = "Index";
}

<h2>Hello @User.Identity.Name</h2>
<p>Account type: @Html.Action("GetLoggedUserRole", "Home")</p>
<h3>Order history :</h3>
<br>


<p>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="table">
    @*<tr>
        <th>Brand</th>
        <th>Name</th>
        <th>Count</th>
        <th>Price</th>
        <th>Curency</th>
    </tr>*@

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <b>Number : @item.Order.Number</b>
            </td>
            <td>
                <b>Date : @item.Order.Date</b>
            </td>
            <td>
                <b>Status : @item.Order.Status</b>
            </td>
            <td>
                @foreach (var orderItem in item.OrderItems)
                {
            <tr>
                <td>
                    @orderItem.BrandName
                </td>
                <td>
                    @orderItem.ItemName
                </td>
                <td>
                    @orderItem.Count
                </td>
                <td>
                    @orderItem.Price
                </td>
                <td>
                    @orderItem.Currency
                </td>
            </tr>}
                </td>

                </tr>
    }

</table>
