        <div class="row ">
            <div>
                <div class="col-lg-2 col-md-2" style="background-color:#d8d8d8">
                    @Html.Action("GetNav", "Home")
                </div>
                <div class="col-lg-10 col-md-10" style="background-color:#f8f8f8">
                    @RenderBody()
                </div>
